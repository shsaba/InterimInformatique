{% extends '::layout.html.twig' %}
{% block title %}Compétences {{ parent() }}{% endblock %}
{% block function %}Compétences{% endblock %}

{% block body %}

    {% for message in app.session.flashbag.get('info') %}
<p class="bg-success">{{ message }}</p>
    {% endfor %}


<div class="row" id="btns">
    <div class="col-xs-12"><a href="{{ path('interim_informatique_configuration_add_skill') }}" class="btn btn-primary btn-sm">Ajouter une compétence</a></div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Nom</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
          {% for skill in skills %}

        <tr>
            <td>{{ skill.name }}</td>
            <td><a href="{{ path('interim_informatique_configuration_infos_skill', {id : skill.id }) }}" class="btn btn-info btn-xs">Infos</a></td>
        </tr>
{% endfor %}
    </tbody>
</table>


{% endblock %}

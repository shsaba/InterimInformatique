{% extends '::layout.html.twig' %}
{% block title %}Types de contrats {{ parent() }}{% endblock %}
{% block function %}Types de contrats{% endblock %}

{% block body %}

    {% for message in app.session.flashbag.get('info') %}
<p class="bg-success">{{ message }}</p>
    {% endfor %}


<div class="row" id="btns">
    <div class="col-xs-12"><a href="{{ path('interim_informatique_configuration_add_kind_contract') }}" class="btn btn-primary btn-sm">Ajouter un contrat</a></div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Nom</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
          {% for kindContract in kindsContracts %}

        <tr>
            <td>{{ kindContract.name }}</td>
            <td><a href="{{ path('interim_informatique_configuration_infos_kind_contract', {id : kindContract.id }) }}" class="btn btn-info btn-xs">Infos</a></td>
        </tr>
{% endfor %}
    </tbody>
</table>


{% endblock %}
